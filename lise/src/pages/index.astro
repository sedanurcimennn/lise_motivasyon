			const modalText = document.getElementById('modal-text');
			const dayBadge = document.getElementById('day-badge');
			const closeButton = document.getElementById('close-button');

			// LocalStorage'dan aÃ§Ä±lan gÃ¼nleri al
			function getOpenedDays() {
				const opened = localStorage.getItem('openedDays');
				return opened ? JSON.parse(opened) : [];
			}

			// LocalStorage'a aÃ§Ä±lan gÃ¼nÃ¼ kaydet
			function markDayAsOpened(dayNumber) {
				const opened = getOpenedDays();
				if (!opened.includes(dayNumber)) {
					opened.push(dayNumber);
					localStorage.setItem('openedDays', JSON.stringify(opened));
					updateDayStatus(dayNumber, true);
				}
			}

			// GÃ¼n durumunu gÃ¼ncelle (tik/boÅŸ)
			function updateDayStatus(dayNumber, isOpened) {
				const dayEl = document.querySelector(`[data-day="${dayNumber}"]`);
				if (dayEl) {
					const statusEl = dayEl.querySelector('.day-status');
					if (statusEl) {
						if (isOpened) {
							statusEl.textContent = 'âœ“';
							dayEl.setAttribute('data-opened', 'true');
							// AÃ§Ä±lan gÃ¼nlerin stilini gÃ¼ncelle
							if (dayEl.classList.contains('unlocked')) {
								dayEl.classList.remove('locked');
								dayEl.classList.add('unlocked');
							}
						} else {
							statusEl.textContent = '';
							dayEl.setAttribute('data-opened', 'false');
						}
					}
				}
			}

			// Sayfa yÃ¼klendiÄŸinde aÃ§Ä±lan gÃ¼nleri gÃ¶ster
			function initializeOpenedDays() {
				const opened = getOpenedDays();
				opened.forEach(dayNumber => {
					updateDayStatus(dayNumber, true);
				});
			}

			function openModal(day) {
				dayBadge.textContent = `GÃ¼n ${day.day}`;
				modalTitle.textContent = day.title;
