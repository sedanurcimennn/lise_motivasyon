				modalOverlay.classList.add('active');
				document.body.style.overflow = 'hidden';
				
				// GÃ¼nÃ¼ aÃ§Ä±lmÄ±ÅŸ olarak iÅŸaretle
				markDayAsOpened(day.day);
			}

			function closeModal() {
				modalOverlay.classList.remove('active');
				document.body.style.overflow = '';
			}

			closeButton.addEventListener('click', closeModal);
			modalOverlay.addEventListener('click', (e) => {
				if (e.target === modalOverlay) {
					closeModal();
				}
			});

			// ESC tuÅŸu ile kapat
			document.addEventListener('keydown', (e) => {
				if (e.key === 'Escape' && modalOverlay.classList.contains('active')) {
					closeModal();
				}
			});

			// Calendar day'lere click event listener ekle
			document.addEventListener('DOMContentLoaded', () => {
				// AÃ§Ä±lan gÃ¼nleri yÃ¼kle (localStorage'dan)
				initializeOpenedDays();

				document.querySelectorAll('.calendar-day').forEach(dayEl => {
					dayEl.addEventListener('click', () => {
						const dayNumber = parseInt(dayEl.getAttribute('data-day'));
						const isUnlocked = dayEl.getAttribute('data-unlocked') === 'true';
						
						if (isUnlocked) {
							const dayData = calendarDaysData.find(d => d.day === dayNumber);
							if (dayData) {
								// SeÃ§ili gÃ¼nÃ¼ vurgula
								document.querySelectorAll('.calendar-day').forEach(el => {
									el.classList.remove('selected');
								});
								dayEl.classList.add('selected');
								
								// Modal'Ä± aÃ§ ve gÃ¼nÃ¼ aÃ§Ä±lmÄ±ÅŸ olarak iÅŸaretle
								openModal(dayData);
							}
						}
